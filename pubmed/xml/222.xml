            <ArticleTitle>Metazoan DNA replication origins.</ArticleTitle>
            <Pagination>
                <MedlinePgn>134-141</MedlinePgn>
            </Pagination>
            <ELocationID EIdType="pii" ValidYN="Y">S0955-0674(18)30145-5</ELocationID>
