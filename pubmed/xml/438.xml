            <ArticleTitle>Regulation of signaling proteins in the brain by light.</ArticleTitle>
            <Pagination>
                <MedlinePgn>101638</MedlinePgn>
            </Pagination>
            <ELocationID EIdType="pii" ValidYN="Y">S0301-0082(19)30024-3</ELocationID>
