            <ArticleTitle>Droplet barcoding: tracking mobile micro-reactors for high-throughput biology.</ArticleTitle>
            <Pagination>
                <MedlinePgn>205-212</MedlinePgn>
            </Pagination>
            <ELocationID EIdType="pii" ValidYN="Y">S0958-1669(18)30212-X</ELocationID>
